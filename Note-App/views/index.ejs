<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Note App</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
<div class="min-h-screen bg-zinc-900">

    <!-- Form -->
    <div class="p-10 text-white">
        <form action="/create" method="POST">

            <input
                type="text"
                name="title"
                placeholder="Title of Note"
                class="block w-full px-5 py-2 rounded-md outline-none bg-zinc-800"
                required
            >

            <textarea
                name="details"
                placeholder="Write Your Note Here....."
                class="block w-full mt-2 px-5 py-2 rounded-md outline-none bg-zinc-800 resize-none"
                required
            ></textarea>

            <input
                type="submit"
                value="Create Task"
                class="mt-2 bg-blue-600 px-5 py-2 rounded-md cursor-pointer"
            >

        </form>
    </div>

    <!-- Notes -->
    <div class="flex flex-wrap p-10 gap-4">
        <% if (files.length > 0) { %>
            <% files.forEach((val) => { %>
                <div class="w-72 bg-zinc-800 rounded-md px-4 py-3">
                    <h1 class="text-white text-lg break-words">
                        <%= val %>
                    </h1>

                    <a
                        href="/files/<%= val %>"
                        class="text-blue-500 mt-3 inline-block hover:underline"
                    >
                        Open Note
                    </a>
                </div>
            <% }) %>
        <% } else { %>
            <h3 class="text-zinc-600">No tasks...</h3>
        <% } %>
    </div>

</div>
</body>
</html>
